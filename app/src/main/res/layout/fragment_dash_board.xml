<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dashBoardViewModel"
            type="com.smf.events.ui.dashboard.DashBoardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/dashboard"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/size_20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/myEvents_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_dashboard"
            android:background="@color/background_gray"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/services"
                android:layout_marginStart="@dimen/size_12dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/size_18sp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/size_12dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/events_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginStart="@dimen/size_12dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:orientation="horizontal"
                tools:listitem="@layout/events_card_view" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/size_15dp"
            android:id="@+id/spinner_action"
            app:layout_constraintTop_toBottomOf="@id/myEvents_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/size_20dp"
                android:background="@drawable/shapes"
                android:layout_weight="1"
                >
                <Spinner
                    android:id="@+id/spn_allServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/size_22sp"
                    >

                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shapes">

                <Spinner
                    android:autofillHints="All Services"
                    android:id="@+id/spn_Branches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/size_22sp">

                </Spinner>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:id="@+id/tx_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/actions"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18sp"
            app:layout_constraintTop_toBottomOf="@id/spinner_action"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:id="@+id/tx_pendtingitems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/_12_pending_items"
            app:layout_constraintTop_toBottomOf="@+id/tx_actions"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginStart="@dimen/size_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_20dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_pendtingitems"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/actions_recyclerview"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            >

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginStart="@dimen/size_10dp"
            android:id="@+id/tx_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textSize="@dimen/size_18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@id/actions_recyclerview"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:id="@+id/tx_pendingstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/_12_status"
            app:layout_constraintTop_toBottomOf="@+id/tx_status"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginStart="@dimen/size_12dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tx_pendingstatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/status_recyclerview"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginBottom="@dimen/size_20dp"
            >

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/clickbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="click"
            app:layout_constraintTop_toBottomOf="@+id/status_recyclerview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

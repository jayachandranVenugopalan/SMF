<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/awardtilte_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Award/Certification title"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/et_awardtilte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapes"
            android:hint="enter Tilte"
            android:padding="10dp"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/awardtilte_tx"/>
        <LinearLayout

            android:id="@+id/datelayout"
            android:layout_marginTop="12dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_awardtilte"
            android:background="@drawable/shapes"
            android:weightSum="3"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/et_datefrom"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:layout_weight="2"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_calendar_today_24"
                />


        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_about"
            android:text="About"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/datelayout"/>
        <EditText
            android:id="@+id/et_aboutotherinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapes"
            app:layout_constraintTop_toBottomOf="@+id/tx_about"
            android:maxLength="1000"
            android:textSize="22sp"
            android:lines="3"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"/>
        <Button
            android:id="@+id/btn_uploaddoc"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Document "
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:padding="2dp"
            android:backgroundTint="#90A8A7A7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_aboutotherinfo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="quoteBriefDialogViewModel"
            type="com.smf.events.ui.quotebriefdialog.QuoteBriefDialogViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.quotebriefdialog.QuoteBriefDialog">

            <RelativeLayout
                android:id="@+id/linear_catering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tx_catering"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/catering_fork_spoon"
                    android:textSize="@dimen/size_25sp" />

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:src="@drawable/backarrow" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                app:layout_constraintTop_toBottomOf="@+id/linear_catering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"
                app:cardCornerRadius="@dimen/size_12dp"
                app:cardElevation="@dimen/size_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/size_10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_20dp">

                        <TextView
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/tx_job_title"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/saras_birthday" />

                        <TextView
                            android:id="@+id/tx_job_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_24dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/_2500"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_22sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:textSize="@dimen/size_18sp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:id="@+id/tx_job_idnum"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tx_job_title"
                            android:text="@string/ca457845264162" />

                        <TextView
                            android:id="@+id/view_quote"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tx_job_amount"
                            android:text="@string/view_quote"
                            android:textSize="@dimen/size_14sp"
                            android:textColor="@color/lightblue" />

                        <LinearLayout
                            android:layout_marginTop="@dimen/size_20dp"
                            android:id="@+id/linear_spn_layout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tx_job_idnum"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:weightSum="3">

                            <ImageView
                                android:id="@+id/exp_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/size_5dp"
                                android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

                            <TextView
                                android:fontFamily="@font/poppins_regular"
                                android:id="@+id/spn_Bid_accepted"
                                android:layout_marginTop="@dimen/size_5dp"
                                app:layout_constraintTop_toBottomOf="@+id/tx_job_idnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_15sp"
                                android:text="@string/bid_accepted"
                                android:layout_weight="3" />

                            <ImageView
                                android:id="@+id/unlike_imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_button_round_corner"
                                android:padding="@dimen/size_5dp"
                                android:src="@drawable/unlike_icon"

                                />


                            <ImageView
                                android:layout_marginLeft="@dimen/size_15dp"
                                android:id="@+id/like_imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/green"
                                android:background="@drawable/custom_button_round_corner"
                                android:padding="@dimen/size_5dp"
                                android:src="@drawable/like_icon" />

                        </LinearLayout>

                        <View
                            android:layout_marginTop="@dimen/size_10dp"
                            android:id="@+id/view_seperater"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/size_2dp"
                            app:layout_constraintTop_toBottomOf="@+id/linear_spn_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="#DAD8D8" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/expandable_view"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/view_seperater"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginLeft="@dimen/size_5dp"
                                android:layout_marginTop="@dimen/size_10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:src="@drawable/completedprocess"
                                android:id="@+id/check1" />

                            <ImageView
                                android:layout_marginLeft="@dimen/size_5dp"
                                android:layout_marginTop="@dimen/size_10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_width="@dimen/size_35dp"
                                android:layout_height="@dimen/size_35dp"
                                android:src="@drawable/inprogress_check"
                                android:id="@+id/check1inprogress"
                                android:visibility="invisible" />

                            <TextView
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginTop="@dimen/size_12dp"
                                android:id="@+id/tx_bid_accpeted"
